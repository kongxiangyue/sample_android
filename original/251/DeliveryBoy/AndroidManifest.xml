<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="br.tsp"
      android:versionCode="46"
      android:versionName="1.4.6">

	<uses-sdk android:minSdkVersion="7"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"></uses-permission>
	

    <application
    	android:icon="@drawable/icon"
    	android:label="@string/app_name"
    	android:screenOrientation="landscape"
    	android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:name="br.tsp.Menu" 
                  android:label="@string/app_name"
                  android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.tsp.Game" android:label="Game">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
			</intent-filter>
        </activity>
        <activity android:name="SettingsActivity" android:screenOrientation="landscape">
        </activity>
        <activity android:name="About" android:screenOrientation="landscape">
        </activity>
        <activity android:name="br.tsp.Score" android:screenOrientation="landscape">
        </activity>
      
    </application>
</manifest>